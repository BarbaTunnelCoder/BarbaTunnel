<Window x:Class="BarbaMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barbatunnel Monitor" Height="398" Width="595" Closing="Window_Closing">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,70,0,0" Name="textBlock1" Text="Report:" VerticalAlignment="Top" Width="57" />
        <TextBox Margin="12,96,12,12" Name="reportTextBox" IsReadOnly="True" TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="LightGray"></TextBox>
        <Button Content="Start" Height="23" HorizontalAlignment="Left" Margin="321,0,0,0" Name="startButton" VerticalAlignment="Top" Width="75" Click="startButton_Click" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,38,0,0" Name="textBlock2" Text="Status:" VerticalAlignment="Top" Width="45" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="63,38,0,0" Name="statusTextBlock" Text="Started" VerticalAlignment="Top" Width="115" />
        <Button Content="Restart" Height="23" HorizontalAlignment="Left" Margin="402,0,0,0" Name="restartButton" VerticalAlignment="Top" Width="75" Click="restartButton_Click" />
        <Button Content="Stop" Height="23" HorizontalAlignment="Left" Margin="486,0,0,0" Name="stopButton" VerticalAlignment="Top" Width="75" Click="stopButton_Click" />
    </Grid>
</Window>
